<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileChat.Views.FriendsPage" BackgroundColor="{DynamicResource PageBackgroundColorSecondary}">
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding Friends}" SelectionMode="None" ItemTapped="ListView_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label Text="{Binding DisplayName}" TextColor="{DynamicResource PrimaryTextColor}"/>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>