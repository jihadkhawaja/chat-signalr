<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MobileChat.Views.FriendsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:MobileChat.Helpers"
    xmlns:viewmodel="clr-namespace:MobileChat.ViewModel"
    Title="Friends"
    x:DataType="viewmodel:FriendsViewModel"
    BackgroundColor="{DynamicResource PageBackgroundColorSecondary}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="AddUserButton">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="{StaticResource MaterialFontFamilySolid}"
                    Glyph="{x:Static helpers:IconFont.Plus}"
                    Size="Large" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <RelativeLayout BackgroundColor="{DynamicResource PageBackgroundColorSecondary}" FlowDirection="LeftToRight">
        <StackLayout Margin="0,10,0,0">
            <ListView
                ItemTapped="ListView_ItemTapped"
                ItemsSource="{Binding Channels}"
                SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout
                                Padding="10"
                                Orientation="Horizontal"
                                Spacing="10"
                                VerticalOptions="Center">
                                <Label
                                    FontFamily="{StaticResource MaterialFontFamilySolid}"
                                    FontSize="Large"
                                    Text="{x:Static helpers:IconFont.User}"
                                    TextColor="{DynamicResource PrimaryTextColor}" />
                                <Label Text="{Binding Id}" TextColor="{DynamicResource PrimaryTextColor}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
        <!--  Popup view Popup  -->
        <ContentView
            Content="{Binding PopupView}"
            HorizontalOptions="Center"
            IsVisible="{Binding PopupView, Converter={StaticResource NullToBoolConverter}}"
            RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                   Property=Height}"
            RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                  Property=Width}"
            VerticalOptions="Center" />
        <!--  loading  -->
        <Grid
            HorizontalOptions="FillAndExpand"
            IsVisible="{Binding IsLoading}"
            RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                   Property=Height}"
            RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                  Property=Width}"
            VerticalOptions="FillAndExpand">
            <ActivityIndicator
                HorizontalOptions="Center"
                IsRunning="True"
                VerticalOptions="Center"
                Color="{DynamicResource SecondaryColor}" />
        </Grid>
    </RelativeLayout>
</ContentPage>